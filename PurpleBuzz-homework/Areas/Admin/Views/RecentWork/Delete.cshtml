@using PurpleBuzz_homework.Models;
@model RecentWork

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Delete Recent Work</h4>
                        <p class="card-description">
                            Basic form layout
                        </p>

                        <span>Title: </span><span>@Model.Title</span>
                        <br />
                        <br />
                        <span>Description: </span><span>@Model.Description</span>
                        <br />
                        <br />
                        <span>ImagePath: </span><span>@Model.ImagePath</span>

                        <br />
                        <br />

                        <form method="post" asp-action="deletework" asp-controller="recentwork" asp-area="admin" asp-route-id="@Model.Id" class="forms-sample">
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

