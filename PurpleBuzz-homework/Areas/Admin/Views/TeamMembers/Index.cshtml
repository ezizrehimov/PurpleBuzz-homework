@using PurpleBuzz_homework.Models;
@model List<TeamMembers>
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <a class="btn btn-primary col-2" asp-action="create" asp-controller="teammembers" asp-area="admin">Create Team Member</a>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Position</th>
                        <th scope="col">Photo</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Name</td>
                            <td>@item.Position</td>
                            <td><img src="~/assets/img/@item.PhotoName" /></td>
                            <td>
                                <a class="btn btn-primary" asp-action="update" asp-controller="teammembers" asp-area="admin" asp-route-id="@item.Id">Update</a>
                                <a class="btn btn-danger" asp-action="delete" asp-controller="teammembers" asp-area="admin" asp-route-id="@item.Id">Delete</a>

                            </td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>