@using PurpleBuzz_homework.Models;
@model TeamMembers

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Delete Team Member</h4>
                        <p class="card-description">
                            Basic form layout
                        </p>

                        <span>Name: </span><span>@Model.Name</span>
                        <br />
                        <br />
                        <span>Position: </span><span>@Model.Position</span>
                        <br />
                        <br />
                        <span>ImagePath: </span><span> <img style="width:100px; height:100px;border-radius:50%;" src="~/assets/img/@Model.PhotoName" /></span>

                        <br />
                        <br />

                        <form method="post" asp-action="deletecomponent" asp-controller="teammembers" asp-area="admin" asp-route-id="@Model.Id" class="forms-sample">
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

