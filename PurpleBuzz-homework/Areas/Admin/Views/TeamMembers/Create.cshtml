@using PurpleBuzz_homework.Models;
@model TeamMembers

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Create Team Member</h4>
                        <p class="card-description">
                            Basic form layout
                        </p>
                        <form enctype="multipart/form-data" method="post" asp-action="create" asp-controller="teammembers" asp-area="admin" class="forms-sample">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input class="form-control" asp-for="Name">
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Position"></label>
                                <input class="form-control" asp-for="Position">
                            </div>

                            <div class="form-group">
                                <label asp-for="Photo"></label>
                                <input class="form-control" asp-for="Photo">
                                <span class="text-danger" asp-validation-for="Photo"></span>

                            </div>

                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidatePartialView");
    }
}