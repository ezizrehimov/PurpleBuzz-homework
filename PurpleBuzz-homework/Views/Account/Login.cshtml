@using PurpleBuzz_homework.ViewModels.Accounts;
@model AccountLoginViewModel

@{
    var returnUrl = Context.Request.Query["ReturnUrl"];
}
<div class="container mt-5">
    <div asp-validation-summary="ModelOnly"></div>
    <form method="post" asp-action="login" asp-controller="account">
        <input type="hidden" asp-for="ReturnUrl" value="@returnUrl" />

        <div class="form-outline mb-4">
            <label class="form-label" asp-for="Username"></label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username"></span>
        </div>



        <div class="form-outline mb-4">
            <label class="form-label" asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>




        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>

        <!-- Register buttons -->
        <div class="text-center">
            <p>Not a member? <a href="#!">Register</a></p>
            <p>or sign up with:</p>
        </div>
    </form>
</div>